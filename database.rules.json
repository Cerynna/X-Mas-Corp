{
  "rules": {
    "characters": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": [
        "userId",
        "faction",
        "level"
      ],
      "$characterId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('userId').val() == auth.uid)"
      }
    },
    "shops": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": [
        "channel"
      ]
    }
  }
}