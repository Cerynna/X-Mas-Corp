{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "characters": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId", "faction", "level"],
      "$characterId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('userId').val() == auth.uid)"
      }
    },
    "guilds": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["faction", "leaderUserId"],
      "$guildId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "events": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["isActive", "startDate", "endDate"],
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "quests": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["level", "faction"]
    },
    "rewards": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "messages": {
  ".read": "auth != null",
  ".write": "auth != null",
  ".indexOn": ["channel"]
    }
  }
}
